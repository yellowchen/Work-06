{
	"security.workspace.trust.untrustedFiles": "open",
	"editor.minimap.enabled": false,
	"liveServer.settings.donotShowInfoMsg": true,
	"workbench.editor.enablePreview": false,
	"liveServer.settings.donotVerifyTags": true,

	//【Prettier】
	"editor.defaultFormatter": "esbenp.prettier-vscode", //使用Prettier排版

	//針對特定文件，設定Prettier為格式化程序的優先工具
	"[html,javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	"prettier.jsxSingleQuote": true, //在jsx使用單引號而不是雙引號
	"prettier.printWidth": 120, //設定代碼最佳長度，超過則執行換行
	"prettier.tabWidth": 4, //縮排空兩格
	"prettier.semi": true, //結束時加分號
	"editor.hover.enabled": false,
	"files.defaultLanguage": "html",
	"editor.formatOnPaste": true, //儲存時自動格式化
	"editor.wordWrap": "on",
	"prettier.useTabs": true,

	//native bracket matching
	"editor.guides.bracketPairs": "active",
	"editor.bracketPairColorization.enabled": true,

	"window.menuBarVisibility": "compact",
	"terminal.explorerKind": "external",
	"terminal.integrated.defaultProfile.windows": "Git Bash",

	"emmet.triggerExpansionOnTab": true, // emmet tab 自動展開

	// template 展開(快速使用HTML標籤)
	"emmet.includeLanguages": {
		"javascript": "javascriptreact",
		"vue-html": "html",
		"plaintext": "jade",
		"ejs": "html"
	},
	"js/ts.implicitProjectConfig.checkJs": true,

	//CSS Navigation
	"editor.quickSuggestions": {
		"other": true,
		"comments": false,
		"strings": false
	},
	"editor.fontSize": 14,
	"editor.codeLensFontSize": 0,
	"window.zoomLevel": 1.5
}